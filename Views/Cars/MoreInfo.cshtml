@model CarDealershipApp.Models.ContactInfoViewModel

@{
    ViewData["Title"] = "More Information";
}

<h1>More Information about the @ViewBag.CarMake @ViewBag.CarModel (@ViewBag.CarYear)</h1>

<div>
    <h2>Car Details</h2>
    <dl class="row">
        <dt class="col-sm-2">Make</dt>
        <dd class="col-sm-10">@ViewBag.CarMake</dd>
        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@ViewBag.CarModel</dd>
        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@ViewBag.CarYear</dd>
        <dt class="col-sm-2">Colour</dt>
        <dd class="col-sm-10">@ViewBag.CarColour</dd>
        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@ViewBag.CarState</dd>
        <dt class="col-sm-2">Extras</dt>
        <dd class="col-sm-10">@ViewBag.CarExtras</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@ViewBag.CarPrice</dd>
    </dl>
</div>

<div>
    <h2>Contact Us for More Information</h2>
    <form asp-action="MoreInfo" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
